#!/bin/zsh
source $DOTFILES/index.zsh

DIR_BIN="$( cd "$( dirname "${0}" )" && pwd )"
source $DIR_BIN/.symlinks

if [ "$FULLFIRE" = "true" ]
then
  source appstore
fi

# required first
setup brew
setup fonts

notify "Password might be required"
if [ "$FULLFIRE" = "true" ]
then
  sleep 5
  notify "Since it's a full run, it might be asked more than once. Check often until process is complete."
fi

# Ask for the administrator password upfront
sudo -v

setup osx
setup git

setup node
setup _cli
setup ssh

setup atom

setup sync

setup logitech
setup browsers

setup slate
setup osx-enhancements

setup dyndns
#setup dnsmasq
setup amp

setup chat
setup multimedia

setup download
setup misc

# stuff that require human interaction at the end
setup dyndns
setup prey

# gems are slow & require password (because I don't use bundler blah blah...)
setup ruby

setup lazydev

setup sharing

setup dock

fuckosx

# todo add cron setup

echo ""
notify "Setup complete ☑️"
